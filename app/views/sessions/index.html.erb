<div>
  <h2><%= t("login", default: "Login") %></h2>

  <%= form_tag sessions_path do %>

    <div class="field">
      <%= label_tag "username", t("username", default: "Username") %>
      <%= text_field_tag "username", params[:username], required: true %>
    </div>

    <div class="field">
      <%= label_tag "password", t("password", default: "Password") %>
      <%= password_field_tag "password", nil, required: true %>
    </div>

    <div class="actions">
      <%= submit_tag t("log_in", default: "Log in"), disable_with: t("loggin_in", default: "logging in..") %>
    </div>

  <% end %>
  
  <div>
    <%= link_to t("forgot_password", default: "I forgot my password"), password_reset_index_path %>
  </div>
  
</div>
